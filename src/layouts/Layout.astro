---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Portfolio Asir-Daniel Fonov " } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Favicon principal: PNG proporcionado por el usuario (mejor compatibilidad). -->
  <link rel="icon" type="image/png" href="/Vodtinker-removebg-preview.png" />
  <!-- Icono para dispositivos Apple -->
  <link rel="apple-touch-icon" href="/Vodtinker-removebg-preview.png" />
  <!-- Fallback SVG (mantener si ya existÃ­a) -->
  <link rel="icon" type="image/svg+xml" href="/logo-option-1.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
