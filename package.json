  "license": "MIT",
  "scripts": {
    "dev": "astro dev --port 3000 --host 0.0.0.0",
    "build": "astro check && astro build",
    "build:clean": "rm -rf dist node_modules/.vite node_modules/.astro && npm run build",
    "lint": "bunx biome lint --write && astro check",
    "format": "bunx biome format --write",
    "preview": "astro preview --port 3000",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:draft": "npm run build && wrangler pages deploy dist"
  },
